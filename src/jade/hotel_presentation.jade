        script(type="text/javascript").

            $(document).ready(function () {
                $('.navigation').css("background", "transparent");
            });

            $(window).scroll(function () {

                var hotel_nav = $('.navigation');

                if ($(this).scrollTop() > 50) {
                    hotel_nav.css("background", "#3E7399");
                    hotel_nav.css("top", "0");
                    $('.logo-big').css("display", "none");
                    $('.logo-container').css("height", "70px");
                    $('.btn-menu-container').show();
                    $('.logo-small').show();
                }
                else {
                    hotel_nav.css("background", "transparent");
                    hotel_nav.css("top", "17px");
                    $('.logo-big').css("display", "block");
                    $('.logo-container').css("height", "110px");
                    $('.btn-menu-container').hide();
                    $('.logo-small').hide();
                }
            });
